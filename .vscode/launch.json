{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote",
            "address": "localhost",
            "port": 7000,
            "localRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "remoteRoot": "/home/pi/zpin",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
		{
			"type": "java",
			"name": "CodeLens (Launch) - App",
			"request": "launch",
			"mainClass": "zpin.App",
			"projectName": "jserver"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Console",
			"program": "${workspaceFolder}/console.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
				"zpin/"
			]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "Attract",
			"program": "${workspaceFolder}/attract.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
				"zpin/"
			]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "Game",
			"program": "${workspaceFolder}/game.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
                "zpin/",
                "--no-mpu",
                // "--no-trace",
                // "--no-gfx",
                "--ip",
                "192.168.2.41",
            ],
            // "runtimeArgs": [ "--prof"]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "GFX",
			"program": "${workspaceFolder}/gfx.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
				"zpin/"
			]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "sound",
			"program": "${workspaceFolder}/sound.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
                "A:\\source\\acnc\\code\\assets\\sound\\music\\alice\\Theme_From_Nightmare_Castle_M2.wav",
			]
        },
		{
			"type": "node",
			"request": "launch",
			"name": "sync",
			"program": "${workspaceFolder}/syncr.ts",
			"console": "integratedTerminal",
			"outFiles": [
				"${workspaceFolder}/build/*.js"
			],
			"args": [
				"zpin/"
			]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
              "${fileBasenameNoExtension}",
              "--config",
              "${workspaceFolder}/jest.config.js",
              "--coverage", "false",
              "--testTimeout=99999999",
              "--maxWorkers=1"
            ],
            "disableOptimisticBPs": true,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "windows": {
              "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            },
            "skipFiles": [
              "<node_internals>/**"
            ]
          }
	]
}